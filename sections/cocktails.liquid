<div>
  <h1>{{ section.settings.headline }}</h1>
  <div>
    {% for block in section.blocks %}
      <div>
        <img
          src="{{ block.settings.image | image_url }}"
          width="200"
          height="auto"
        >
        <h2>{{ block.settings.title }}</h2>
        <button>
          <a href="https://velvet-pour.myshopify.com/pages/cocktails/{{ block.settings.title}}"> Description </a>
        </button>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Cocktail Carousel" ,
  "settings": [ {
    "type" : "text" ,
    "label": "headline" ,
    "id" : "headline"
  }] ,
  "blocks": [
    {
      "name" : "cocktail" ,
      "type": "image" ,
      "settings": [
        {
          "type": "image_picker",
          "label": "image",
          "id": "image"
        } ,
        {
          "type": "text" ,
          "label": "title" ,
          "id": "title"
        } ,
        {
          "type": "text" ,
          "label": "Coctail-page",
          "id": "Cocktail-page"
        }
      ]
    }
  ] ,
  "presets": [
    {"name": "Cocktail viewer"}
  ]
}
{% endschema %}
