<link href="{{ 'cocktail-carousel.css' | asset_url }}" rel="stylesheet" type="text/css">

<div class="cocktail-carousel">
  <h1>{{ section.settings.headline }}</h1>

  <div class="carousel-container">
    {% assign cocktails = product.metafields.cocktails %}

    {% for cocktail in cocktails %}
      <div class="carousel-item">
        <a href="{{ cocktail.cocktail_page_handle | url }}">
          <div class="cocktail-card">
            <img
              src="{{ cocktail.image | image_url }}"
              width="200"
              height="auto"
              alt="{{ cocktail.title }}"
              class="cocktail-image"
            >
            <h2 class="cocktail-title">{{ cocktail.title }}</h2>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Cocktail Carousel",
  "settings": [
    {
      "type": "text",
      "label": "Headline",
      "id": "headline"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Cocktail Viewer"
    }
  ]
}
{% endschema %}
