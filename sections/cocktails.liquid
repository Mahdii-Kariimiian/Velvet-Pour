<div>
  <h1>{{ section.settings.headline }}</h1>
  <a href="https://velvet-pour.myshopify.com/pages/cocktails/{{ cocktail.query }}">
    <div>
      {% for cocktail in shop.metaobjects.cocktails.values %}
        <div>
          <img
            src="{{ cocktail.image_file_ | image_url }}"
            width="200"
            height="auto"
          >
          <h2>{{ cocktail.title }}</h2>
        </div>
      {% endfor %}
    </div>
  </a>
</div>

{% schema %}
{
  "name": "Cocktail Carousel" ,
  "settings": [ {
    "type" : "text" ,
    "label": "headline" ,
    "id" : "headline"
  }] ,
  "blocks": [
    {
      "name" : "cocktail" ,
      "type": "image" ,
      "settings": [
        {
          "type": "image_picker",
          "label": "image",
          "id": "image"
        } ,
        {
          "type": "text" ,
          "label": "title" ,
          "id": "title"
        } ,
        {
          "type": "text" ,
          "label": "Coctail-page",
          "id": "Cocktail-page"
        }
      ]
    }
  ] ,
  "presets": [
    {"name": "Cocktail viewer"}
  ]
}
{% endschema %}
