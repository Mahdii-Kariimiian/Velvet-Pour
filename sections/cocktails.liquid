<link href="{{ 'cocktail-carousel.css' | asset_url }}" rel="stylesheet" type="text/css">
<div class="cocktail-carousel">
  <h1>{{ section.settings.headline }}</h1>

  <div class="carousel-container">
    {% for block in section.blocks limit: 4 %}
      <div class="carousel-item">
        <a href="https://velvet-pour.myshopify.com/pages/cocktail/{{ block.settings.cocktail_URL }}">
          <div class="cocktail-card">
            <img
              src="{{ block.settings.image | image_url }}"
              width="200"
              height="auto"
              alt="{{ block.settings.title }}"
              class="cocktail-image"
            >
            <h2 class="cocktail-title">{{ block.settings.title }}</h2>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Cocktail Carousel",
  "settings": [
    {
      "type": "text",
      "label": "Headline",
      "id": "headline"
    }
  ],
  "blocks": [
    {
      "name": "cocktail",
      "type": "cocktail",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type":"text",
          "label": "Cocktail URL",
          "id": "cocktail_URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cocktail Viewer"
    }
  ]
}
{% endschema %}
